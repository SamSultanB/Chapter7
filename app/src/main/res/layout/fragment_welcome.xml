<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.WelcomeFragment">

    <ImageView
        android:id="@+id/welcome_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/large_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/smile_text"
        android:textColor="@color/smile_text_color"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/smile_text_color"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="50dp"
        android:text="Начать пользоваться"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/sing_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Есть аккаунт? Войти"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</LinearLayout>